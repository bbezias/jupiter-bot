{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"jsx": "preserve",
		"module": "commonjs",
		"allowJs": true,
	    "rootDir": "src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["client", "dist", "node_modules"]
}
